{% extends 'base.html.twig' %}

{% block title %}Meteo Toulouse{% endblock %}

{% block body %}
   {% if meteo.cod == 200 %}
    <article
    class="w-64 ml-auto mr-auto rounded-lg border border-gray-100 bg-white p-4 shadow-xs transition hover:shadow-lg sm:p-6"
    >
        <h3 class="mt-0.5 text-lg font-medium text-gray-900">
            Données météo :
        </h3>
        <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
        Ville : {{ meteo.name }}
        Pays : {{ meteo.sys.country }}
        </p>
        <p href="#" class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-blue-600">
        Temperature : {{ meteo.main.temp }} ° C
        </p>
        <img src="https://openweathermap.org/img/wn/{{ meteo.weather[0].icon}}@2x.png" alt="">
    </article>
   {% endif %}
   {% if meteo.erreur is defined %}
        {{ meteo.erreur }}
   {% endif %}
{% endblock %}
